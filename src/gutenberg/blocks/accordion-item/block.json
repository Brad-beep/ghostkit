{
	"name": "ghostkit/accordion-item",
    "parent": [ "ghostkit/accordion" ],
	"category": "ghostkit",
    "supports": {
        "html": false,
        "className": false,
        "anchor": true,
        "align": [ "wide", "full" ],
        "inserter": false,
        "reusable": false
    },
    "attributes": {
        "heading": {
            "type": "array",
            "source": "children",
            "selector": ".ghostkit-accordion-item-label",
            "default": "Accordion Item"
        },
        "active": {
            "type": "boolean",
            "default": false
        },
        "itemNumber": {
            "type": "number"
        }
    }
}
